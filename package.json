{
  "name": "@music10/web",
  "version": "1.2.0",
  "author": "Dmitry Dergunov <dmitry@dergunov.net>",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "android": "react-native run-android",
    "android:release": "react-native run-android --variant release",
    "build:android:apk": "cd android && gradlew assembleRelease",
    "build:android:aab": "cd android && gradlew bundleRelease",
    "test": "react-scripts test",
    "test:cov": "react-scripts test --ci --coverage --watchAll=false",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.tsx\"",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "deploy": "scp -r build/* dergunov@dplnk.ru:~/music/web/build",
    "deploy:doc": "scp -r storybook-static/* dergunov@dplnk.ru:~/music/web/build/dev/doc/web",
    "deploy:coverage": "scp -r coverage/lcov-report/* dergunov@dplnk.ru:~/music/web/build/dev/coverage/web"
  },
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "@emotion/native": "^11.0.0",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@react-native-community/hooks": "^2.6.0",
    "axios": "^0.21.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-native": "^0.63.4",
    "react-native-appmetrica-yandex": "^0.5.0",
    "react-native-share": "^5.1.1",
    "react-native-sound": "^0.11.0",
    "react-native-svg": "^12.1.0",
    "react-native-use-sound": "^1.2.0",
    "react-native-web": "^0.14.13",
    "react-query": "^3.8.2",
    "react-scripts": "4.0.2",
    "react-test-renderer": "^17.0.1",
    "rxjs": "^6.6.3",
    "socket.io-client": "^2.4.0",
    "storybook": "^6.1.17",
    "typescript": "^4.1.4",
    "use-sound": "^2.0.1",
    "web-vitals": "^1.1.0"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "^11.2.0",
    "@nodelib/fs.stat": "^2.0.4",
    "@storybook/addon-actions": "^6.1.17",
    "@storybook/addon-docs": "^6.1.17",
    "@storybook/addon-essentials": "^6.1.17",
    "@storybook/addon-links": "^6.1.17",
    "@storybook/node-logger": "^6.1.17",
    "@storybook/preset-create-react-app": "^3.1.5",
    "@storybook/react": "^6.1.17",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.6.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/react-native": "^0.63.48",
    "@types/react-native-share": "^3.3.1",
    "@types/socket.io-client": "^1.4.35",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "node-sass": "^4.14.1",
    "prettier": "^2.2.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,js,tsx,jsx}",
      "!src/**/*.stories.{ts,js,tsx,jsx}"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
